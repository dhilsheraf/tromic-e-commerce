            text-align: center;
            position: relative;
        }

        .product-card img {
            width: 100%;
            height: auto;
            margin-bottom: 15px;
            border-radius: 5px;
        }

        #image-error {
            color: red;
            display: none;
        }

        .image-preview {
            width: 100px;
            height: 100px;
            margin: 5px;
            border-radius: 5px;
            object-fit: cover;
        }
