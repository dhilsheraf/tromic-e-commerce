    <!-- Main Script -->
    <script src="/assets/js/main.js?v=1.1" type="text/javascript"></script>

    <script>
        // Add Coupon
        function addCoupon() {
    const couponCode = document.getElementById('couponCode').value.trim();
    const minAmount = document.getElementById('discountMinAmount').value.trim();
    const discount = document.getElementById('discountValue').value.trim();
    const activationDate = document.getElementById('startDate').value.trim();
    const expirationDate = document.getElementById('expiryDate').value.trim();

    // Validation Rules
    const errors = [];
    const today = new Date().toISOString().split('T')[0];

    // Check if all fields are filled
    if (!couponCode || !minAmount || !discount || !activationDate || !expirationDate) {
        errors.push('All fields are required.');
    }

    // Validate Coupon Code
    if (!/^[a-zA-Z0-9]{5,20}$/.test(couponCode)) {
        errors.push('Coupon Code must be alphanumeric and 5-20 characters long.');
    }

    // Validate Minimum Amount
    if (isNaN(minAmount) || minAmount <= 0) {
        errors.push('Minimum Amount must be a positive number.');
    }

    // Validate Discount Value
    if (isNaN(discount) || discount <= 0) {
        errors.push('Discount Value must be a positive number.');
    }

    // Validate Activation Date
    if (activationDate < today) {
        errors.push('Activation Date cannot be in the past.');
    }

    // Validate Expiration Date
    if (expirationDate <= activationDate) {
        errors.push('Expiration Date must be after the Activation Date.');
    }

    // If there are errors, show them and stop further execution
    if (errors.length > 0) {
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            html: errors.join('<br>'),
        });
        return;
    }

    // Proceed with adding coupon
    fetch('/admin/add-coupon', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
            code: couponCode,
            discountValue: discount,
            minAmount: minAmount,
            activationDate,
            expirationDate,
        }),
    })
        .then(response => response.json())
        .then(data => {
            if (data.message) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: data.message,
                });

                const newRow = `
                <tr id="${data.coupon._id}">
                    <td>${data.coupon.code}</td>
                    <td>${data.coupon.discount}</td>
                    <td>${data.coupon.minAmount}</td>
                    <td>${new Date(data.coupon.activeAt).toLocaleDateString()}</td>
                    <td>${new Date(data.coupon.expiresAt).toLocaleDateString()}</td>
                    <td>
                        <span class="btn-delete" onclick="deleteCoupon('${data.coupon._id}')">
                            <i class="material-icons md-delete"></i> Delete
                        </span>
                    </td>
                </tr>`;
                document.getElementById('couponTableBody').insertAdjacentHTML('beforeend', newRow);
                document.getElementById('addCouponForm').reset();
                $('#addCouponModal').modal('hide');
            }
        })
        .catch(error => {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to add the coupon. Please try again.',
            });
            console.error(error);
        });
}
    
        // Delete Coupon
        function deleteCoupon(couponId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'This action cannot be undone',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it',
                cancelButtonText: 'Cancel',
            }).then(result => {
                if (result.isConfirmed) {
                    fetch(`/admin/delete-coupon/${couponId}`, {
                        method: 'DELETE',
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    icon: 'success',
                                    text: 'The coupon has been deleted',
                                });
                                document.getElementById(couponId).remove();
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: data.message || 'Failed to delete the coupon.',
                                });
                            }
                        })
                        .catch(error => {
                            console.error(error);
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'An unexpected error occurred.',
                            });
                        });
                }
            });
        }
    </script>
    

