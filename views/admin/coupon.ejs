            </div>
        </header>
        <section class="content-main">
            <div class="content-header d-flex justify-content-between align-items-center">
                <h2 class="content-title">Coupon Management</h2>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCouponModal">
                    <i class="material-icons md-plus"></i> Add Coupon
                </button>
            </div>

            <div class="card">
                <div class="card-body">
                    <table class="coupon-table">
                        <thead>
                            <tr>
                                <th>Coupon Code</th>
                                <th>Discount Value</th>
                                <th>Min Amount</th>
                                <th>Activation Date</th>
                                <th>Expiration Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="couponTableBody">
                            <% if (coupons && coupons.length > 0) { %>
                                <% coupons.forEach(coupon => { %>
                                    <tr id="<%= coupon._id %>">
                                        <td><%= coupon.code %></td>
                                        <td><%= coupon.discount %></td>
                                        <td><%= coupon.minAmount %></td>
                                        <td><%= new Date(coupon.activeAt).toLocaleDateString('en-US', {
                                            day: '2-digit',
                                            month: 'short',
                                            year: 'numeric'
                                        }).toUpperCase() %></td>
                                        <td><%= new Date(coupon.expiresAt).toLocaleDateString('en-US', {
                                            day: '2-digit',
                                            month: 'short',
                                            year: 'numeric'
                                        }).toUpperCase() %></td>
                                        <td>
                                            <span class="btn-delete" onclick="deleteCoupon('<%= coupon._id %>')">
                                                <i class="material-icons md-delete"></i> Delete
                                            </span>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center">No coupons found</td>
                                </tr>
                            <% } %>
                        </tbody>                        
                    </table>
                </div>
            </div>
