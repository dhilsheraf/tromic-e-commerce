    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/favicon.svg" />
    <!-- Template CSS -->
    <link href="/assets/css/main.css?v=1.1" rel="stylesheet" type="text/css" />


    <style>
        .table-title {
            font-size: 1.5em;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .category-table thead th {
            background-color: #f8f9fa;
            text-align: left;
            font-weight: 600;
        }

        .category-table tbody td,
        .category-table tbody th {
            vertical-align: middle;
        }

        .badge-success {
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .btn-success {
            color: white;
            background-color: #28a745;
            border: none;
        }

        .table-responsive {
            overflow-x: auto;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .table-title {
                font-size: 1.25em;
            }

            .category-table th,
            .category-table td {
                font-size: 0.9em;
            }

            .category-table .btn {
                font-size: 0.8em;
                padding: 5px 10px;
            }
        }


        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        /* Align the entries control to the left */
        .entries-control {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }

        /* Align the search bar to the right */
        .search-control {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: flex-end;
        }

        /* Ensure the table is responsive */
        .table-responsive {
            overflow-x: auto;
        }

        /* Ensure the table looks good on small screens */
        @media (max-width: 768px) {
            .content-main {
                padding: 15px;
            }

            .table-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .entries-control,
            .search-control {
                width: 100%;
                margin-bottom: 10px;
            }

            .search-control input {
                width: 100%;
            }
        }


        /* Style the search bar */
        .search-control input {
            width: 250px;
            /* Set a default width */
            padding: 10px 15px;
            /* Add padding for better spacing */
            font-size: 14px;
            /* Set a reasonable font size */
            border: 2px solid #ccc;
            /* Light border color */
            border-radius: 5px;
            /* Rounded corners */
            outline: none;
            /* Remove default outline on focus */
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            /* Add smooth transitions */
        }


        /* Ensure responsiveness */
        @media (max-width: 768px) {
            .search-control input {
                width: 100%;
                /* Make the input full width on smaller screens */
            }
        }
    </style>
</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="index.html" class="brand-wrap">
                <img src="/assets/imgs/theme/logo.svg" class="logo" alt="Nest Dashboard" />
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize"><i
                        class="text-muted material-icons md-menu_open"></i></button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item">
                    <a class="menu-link" href="/admin/dashboard">
                        <i class="icon material-icons md-home"></i>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/users">
                        <i class="icon material-icons md-person"></i>
                        <span class="text">Users</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/products">
                        <i class="icon material-icons md-shopping_cart"></i>
                        <span class="text">Products</span>
                    </a>
                </li>
                <li class="menu-item has-submenu active">
                    <a class="menu-link" href="/admin/category">
                        <i class="icon material-icons md-shopping_cart"></i>
                        <span class="text">Category</span>
                    </a>
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/orders">
                        <i class="icon material-icons md-add_box"></i>
                        <span class="text">Orders</span>
                    </a>
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/offer">
                        <i class="icon material-icons md-monetization_on"></i>
                        <span class="text">Offer</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/coupon">
                        <i class="icon material-icons md-stars">
                        </i> <span class="text">Coupons</span> </a>
                </li>
            </ul>
        </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"><i
                        class="material-icons md-apps"></i></button>
                <ul class="nav">

                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#"> <i class="material-icons md-nights_stay"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="requestfullscreen nav-link btn-icon"><i
                                class="material-icons md-cast"></i></a>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">

            <div class="card mb-4">

                <!-- card-header end// -->
                <div class="card-body">
                    <section class="content-main">
                        <div class="content-header">
                            <h2 class="content-title">Category List</h2>
                            <a href="/admin/category/add" class="btn btn-primary"><i class="material-icons md-plus"></i>
                                Add Category</a>
                        </div>

                        <div class="table-header">
                            <div class="entries-control">
                                Show
                                <select id="entries-select" onchange="changeEntriesLimit(this)">
                                    <option value="10" <% if (limit==10) { %>selected<% } %>>10</option>
                                    <option value="25" <% if (limit==25) { %>selected<% } %>>25</option>
                                    <option value="50" <% if (limit==50) { %>selected<% } %>>50</option>
                                    <option value="100" <% if (limit==100) { %>selected<% } %>>100</option>
                                </select>
                                entries
                            </div>
                            <div class="search-control">
                                Search:
                                <input type="text" id="search-input" placeholder="Type to search..."
                                    oninput="searchCategory()">
                            </div>
                        </div>


                        <div class="card">
                            <div class="table-responsive">
                                <table class="table category-table">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Category Name</th>
                                            <th>Description</th>
                                            <th>Status</th>
                                            <th>Add offer</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="category-table-body">
                                        <% if (typeof categories !=='undefined' && categories.length> 0) { %>
                                            <% categories.forEach((category, index)=> { %>
                                                <tr class="table-row">
                                                    <td>
                                                        <%= (currentPage - 1) * limit + index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= category.name %>
                                                    </td>
                                                    <td>
                                                        <%= category.description %>
                                                    </td>
                                                    <td>
                                                        <button class="status-btn btn btn-success btn-sm"
                                                            data-category-id="<%= category._id %>">
                                                            <%= category.isActive ? 'Deactivate' : 'Activate' %>
                                                        </button>
                                                    </td>
                                                    <td>
                                                        <!-- Inside category-table tbody -->
                                                        <% if (category.offer) { %>
                                                            <button class="btn btn-danger btn-sm remove-offer-btn"
                                                                data-category-id="<%= category._id %>">Remove Offer <%=
                                                                    category.offer.name%>
                                                                    <%= category.offer.discount %>%</button>
                                                            <% } else { %>
                                                                <button class="btn btn-primary btn-sm apply-offer-btn"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#applyOfferModal"
                                                                    data-category-id="<%= category._id %>">Apply
                                                                    Offer</button>
                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <a href="/admin/category/edit/<%= category._id %>"
                                                            class="btn btn-success btn-sm">Edit</a>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="text-center">No categories found</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </section>
                </div>
                <!-- card-body end// -->
            </div>


            <!-- offer modal -->
            <div class="modal" id="applyOfferModal" tabindex="-1" aria-labelledby="applyOfferModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="applyOfferModalLabel">Apply Offer to Category</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <label for="offer-select">Choose an Offer:</label>
                            <select id="offer-select" class="form-control">
                                <% offers.forEach(offer=> { %>
                                    <option value="<%= offer._id %>" data-discount="<%= offer.discount %>">
                                        <%= offer.name %>&nbsp;<%= offer.discount %>% &nbsp;
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" id="applyOfferButton">Apply Offer</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- card end// -->
            <div class="pagination-area mt-15 mb-50">
                <nav>
                    <ul class="pagination">
                        <% if (currentPage> 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">
                                    << /a>
                            </li>
                            <% } %>
                                <% for (let i=1; i <=totalPages; i++) { %>
                                    <li class="page-item <% if (currentPage === i) { %>active<% } %>">
                                        <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>
                                        <% if (currentPage < totalPages) { %>
                                            <li class="page-item">
                                                <a class="page-link"
                                                    href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">></a>
                                            </li>
                                            <% } %>
                    </ul>
                </nav>
            </div>
        </section>
        <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                        document.write(new Date().getFullYear());
                    </script>
                    &copy; Nest - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">All rights reserved</div>
                </div>
            </div>
        </footer>
    </main>
    <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/vendors/select2.min.js"></script>
    <script src="/assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assets/js/main.js?v=1.1" type="text/javascript"></script>

    <script>
document.addEventListener('DOMContentLoaded', function () {

// Open modal and set category ID on button click
document.querySelectorAll('.apply-offer-btn').forEach(button => {
    button.addEventListener('click', function () {
        const categoryId = this.dataset.categoryId;
        document.querySelector('#applyOfferModal').dataset.categoryId = categoryId; // Save the category ID to modal
    });
});

// Apply offer logic using fetch
document.querySelector('#applyOfferButton').addEventListener('click', async function () {
    const categoryId = document.querySelector('#applyOfferModal').dataset.categoryId;
    const offerId = document.querySelector('#offer-select').value;
    const discount = document.querySelector('#offer-select').selectedOptions[0].dataset.discount;

    try {
        const response = await fetch('/admin/category/apply-offer', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                categoryId: categoryId,
                offerId: offerId,
                discount: discount
            })
        });

        if (response.ok) {
            const data = await response.json();
            Swal.fire({
                title: 'Offer applied successfully!',
                icon: 'success',
            }).then(() => {
                location.reload(); // Reload the page to update the category offer
            });
        } else {
            const errorData = await response.json();
            Swal.fire({
                title: 'Error applying offer',
                icon: 'error',
                text: errorData.message || 'Something went wrong!',
            });
        }
    } catch (error) {
        Swal.fire('Error applying offer');
        console.error(error);
    }
});

// Remove offer logic using fetch
document.querySelectorAll('.remove-offer-btn').forEach(button => {
    button.addEventListener('click', function () {
        const categoryId = this.dataset.categoryId;

        Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to remove the offer from this category.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, remove offer',
            cancelButtonText: 'No, keep offer',
        }).then(async (result) => {
            if (result.isConfirmed) {
                try {
                    const response = await fetch('/admin/category/remove-offer', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ categoryId: categoryId })
                    });

                    if (response.ok) {
                        Swal.fire({
                            title: 'Offer removed successfully!',
                            icon: 'success',
                        }).then(() => {
                            location.reload(); // Reload the page to update the offer status
                        });
                    } else {
                        const errorData = await response.json();
                        Swal.fire({
                            title: 'Error removing offer',
                            icon: 'error',
                            text: errorData.message || 'Something went wrong!',
                        });
                    }
                } catch (error) {
                    Swal.fire({
                        title: 'Error removing offer',
                        icon: 'error',
                        text: 'Something went wrong!',
                    });
                    console.error(error);
                }
            }
        });
    });
});

});


    </script>

    <script src="/assets/js/category.js"></script>
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.min.css" rel="stylesheet">

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.min.js"></script>

</body>

</html>