                        </li>
                        
                    </ul>
                </div>
            </header>
            <section class="content-main">
                <div class="content-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h2 class="content-title">Offers Management</h2>
                        </div>
                        <div class="col-md-6 text-end">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addOfferModal">
                                <i class="material-icons md-plus"></i> Create Offer
                            </button>
                        </div>
                    </div>
                </div>
            
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Discount %</th>
                                        <th>Start Date</th>
                                        <th>Expiry Date</th>
                                        <th>Action</th> <!-- Updated header -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>offer.id</td>
                                        <td>offer.name</td>
                                        <td>offer.discountPercentage</td>
                                        <td>offer.startDate</td>
                                        <td>offer.expiryDate</td>
                                        <td>
                                            <!-- Action buttons -->
                                            <button class="btn btn-sm btn-danger" onclick="deleteOffer('offer.id')">
                                                <i class="material-icons md-delete"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>            


            <div class="modal fade" id="addOfferModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Create New Offer</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <form id="createOfferForm">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Offer Name</label>
                                    <input type="text" class="form-control" name="name" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Discount Percentage</label>
                                    <input type="number" class="form-control" name="discountPercentage" 
                                           min="1" max="100" required>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Start Date</label>
                                        <input type="date" class="form-control" name="startDate" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Expiry Date</label>
                                        <input type="date" class="form-control" name="expiryDate" required>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Create Offer</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


            <!-- content-main end// -->
            <footer class="main-footer font-xs">
                <div class="row pb-30 pt-15">
