                                                        <% if (product.offer) { %>
                                                            <form action="/admin/product/remove-offer/<%= product._id %>" method="POST" style="display:inline;">
                                                                <button type="submit" class="btn btn-danger">
                                                                    <%= product.offer.name %> - <%= product.offer.discount %>% | Remove Offer
                                                                </button>
                                                            </form>
                                                        <% } else { %>
                                                            <button class="btn btn-offer" onclick="openOfferModal('<%= product._id %>', '<%= product.name %>', '<%= product.price %>')">
                                                                Apply Offer
                                                            </button>
                                                        <% } %>
                                                    <% } %>                                
                                                </td>
                                            </tr>
