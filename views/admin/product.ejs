    <script>


        function openOfferModal(productId, productName, productPrice) {
            document.getElementById('productId').value = productId;
            document.getElementById('productName').value = productName;
            document.getElementById('productPrice').value = '₹' + productPrice;
            document.getElementById('offerType').value = '';
            document.getElementById('offerModal').style.display = 'block';
        }

        function closeOfferModal() {
            document.getElementById('offerModal').style.display = 'none';
        }


        function applyOffer() {
            const productId = document.getElementById('productId').value;
            const offerId = document.getElementById('offerType').value;

            if (!offerId) {
                Swal.fire('Please select an offer type.');
                return;
            }


            Swal.fire({
                title: 'Applying offer...',
                text: 'Please wait while we apply the offer.',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            fetch(`/admin/product/apply-offer`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId, offerId })
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.success) {
                        Swal.fire('Success!', 'Offer applied successfully!', 'success').then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error!', 'Failed to apply the offer.', 'error');
                    }
                })
                .catch((error) => {
                    Swal.fire('Error!', 'Something went wrong. Please try again.', 'error');
                })
                .finally(() => {
                    Swal.close();
                    closeOfferModal();
                });

                document.getElementById('stockFilter').addEventListener('change', function() {
    const searchQuery = document.querySelector('input[name="search"]').value; // Get the current search query if any
    const stock = this.value; // Get the selected stock option

    // Create the query string with stock and search (if applicable)
    let queryString = '';
    if (searchQuery) {
        queryString += `search=${encodeURIComponent(searchQuery)}&`;
    }
    if (stock) {
        queryString += `stock=${encodeURIComponent(stock)}`;
    }

    // Redirect to the updated URL
    window.location.href = `/admin/products?${queryString}`;
});


        }
    </script>
