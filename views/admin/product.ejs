        </header>
        <section class="content-main">

            <div class="card mb-4">
                <!-- Existing card header and search remains the same -->
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="container">
                            <div style="margin-bottom: 20px;">
                                <a href="/admin/products/add" class="btn-add">Add New Product</a>
                            </div>
                            <div class="col-lg-2 col-6">
                                <form action="/admin/products" method="get">
                                    <select id="stockFilter" class="form-select" name="stock">
                                        <option value="">All Stocks</option>
                                        <option value="out-of-stock" <%= stockStatus === 'out-of-stock' ? 'selected' : '' %>>Out of stock</option>
                                        <option value="low-stock" <%= stockStatus === 'low-stock' ? 'selected' : '' %>>Low stock</option>
                                        <option value="in-stock" <%= stockStatus === 'in-stock' ? 'selected' : '' %>>In stock</option>
                                    </select>
                                    <button type="submit" class="btn btn-filter" style="background-color: #4CAF50;">Filter</button>
                                </form>
                            </div>                            
