<%- include("../partials/header.ejs") %>
<div class="breadcrumb-area breadcrumb-height" data-bg-image="/images/breadcrumb/bg/1-1-1920x400.jpg">
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-lg-12">
        <div class="breadcrumb-item text-night-rider">
          <h2 class="breadcrumb-heading">Order Details</h2>
          <ul>
            <li>
              <a href="/">Home/</a>
            </li>
            <li><a href="/my-account">Order/</a> </li>
            <li>Order Detail</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<main>
  <div class="order-details">
    <h2>ORDER DETAILS</h2>
    <p>OrderId: <%= order._id %></p>
    <p>Date: <%= new Date(order.createdAt).toLocaleDateString() %></p>
    <p>Payment Method: <%= order.paymentMethod || 'Not specified' %></p>
    <p>Address: <%= order.addressId.addressLine || 'N/A' %></p>
    <p>Shipping: <%= order.addressId.postalCode %>, <%= order.addressId.city %></p>

    <h2>Ordered Products</h2>
    <% order.products.forEach(product => { %>
      <div class="product-row">
        <img src="<%= product.product.images[0] || '/images/default-product.jpg' %>" alt="<%= product.product.name %>">
        <div class="product-info">
          <h3><%= product.product.name %></h3>
          <p>Price: ₹<%= product.product.price %></p>
          <p>Quantity: <%= product.quantity %></p>
          <p>Total: ₹<%= product.quantity * product.product.price %></p>
          <p>Discounted: ₹<%= product.discount || 0 %></p>
          <% if (order.status === 'Pending') { %>
            <form action="/cancel-order/<%= order._id %>" method="POST">
              <button type="submit">Cancel order</button>
            </form>
          <% } %>
        </div>
      </div>
    <% }); %>

    <div class="status-line">
      <span class="status <%= order.status === 'Pending' ? 'completed' : 'pending' %>">Pending</span>
      <span class="status <%= order.status === 'Ordered' ? 'completed' : 'pending' %>">Ordered</span>
      <span class="status <%= order.status === 'Packed' ? 'completed' : 'pending' %>">Packed</span>
      <span class="status <%= order.status === 'Shipped' ? 'in-progress' : 'pending' %>">Shipped</span>
      <span class="status <%= order.status === 'Delivered' ? 'completed' : 'pending' %>">Delivered</span>
    </div>    
  </div>
</main>

