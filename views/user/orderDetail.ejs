<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 20px;
    }
    .order-container {
      max-width: 800px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .order-header {
      text-align: center;
      margin-bottom: 20px;
    }
    .order-header h2 {
      color: #4CAF50;
    }
    .order-details, .order-products, .order-address, .order-actions {
      margin-bottom: 20px;
    }
    .order-products table {
      width: 100%;
      border-collapse: collapse;
    }
    .order-products th, .order-products td {
      text-align: left;
      padding: 10px;
      border: 1px solid #ddd;
    }
    .order-total {
      text-align: right;
      font-size: 1.2em;
      font-weight: bold;
      color: #4CAF50;
    }
    .order-actions {
      text-align: center;
    }
    .btn {
      display: inline-block;
      padding: 10px 20px;
      font-size: 16px;
      margin: 5px;
      border-radius: 5px;
      border: none;
      cursor: pointer;
    }
    .btn-cancel {
      background-color: #e74c3c;
      color: white;
    }
    .btn:hover {
      opacity: 0.9;
    }
  </style>
</head>
<body>
  <div class="order-container">
    <div class="order-header">
      <h2>Order Details</h2>
      <p>Order ID: <%= order._id %></p>
      <p>Status: <strong><%= order.status %></strong></p>
    </div>

    <!-- Order Products -->
    <div class="order-products">
      <h3>Products</h3>
      <table>
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% order.products.forEach(item => { %>
            <tr>
              <td><%= item.product ? item.product.name : 'Product not found' %></td>
              <td>₹<%= item.product ? item.price : 0 %></td>
              <td><%= item.quantity %></td>
              <td>₹<%= item.product ? item.price * item.quantity : 0 %></td>
            </tr>
          <% }); %>          
        </tbody>
      </table>
      <div class="order-total">
        Total Price: ₹<%= order.totalPrice %>
      </div>
    </div>

    <!-- Address Details -->
    <div class="order-address">
      <h3>Delivery Address</h3>
      <p>
        <%= order.addressId.addressLine %><br>
        <%= order.addressId.city %>, <%= order.addressId.state %> - <%= order.addressId.pincode %> <br>
        <%= order.addressId.phone %>
      </p>
    </div>

    <!-- User Details (Optional) -->
    <div class="order-details">
      <h3>User Details</h3>
      <p>
        Name: <%= order.userId.usename %><br>
        Email: <%= order.userId.email %>
      </p>
    </div>

    <!-- Cancel Order Button -->
    <div class="order-actions">
      <% if (order.status === 'Pending') { %>
        <form method="POST" action="/profile/orders/cancel/<%= order._id %>">
          <button type="submit" class="btn btn-cancel">Cancel Order</button>
        </form>
      <% } %>
    </div>
  </div>
</body>
</html>
